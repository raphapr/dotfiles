[user]
  name = Raphael P. Ribeiro
  email = raphaelpr01@gmail.com
	signingkey = FA70B2729F47724C
[credential]
  helper = cache --timeout=3600
[core]
  editor = nvim
  excludesfile = /home/raphael/.gitignore_global
  pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
  aa = add -A
  ap = add --patch
  df = diff
  dc = diff --cached
  ds = diff --staged
  st = status -sb
  ci = commit -m
  cia = commit --amend
  co = checkout

  ff = merge --ff-only origin/master
  pom = push origin master

  s = stash
  sa = stash apply
  sl = stash list
  sp = stash pop
  ss = stash save
  sc = stash clear

  l = log --pretty=format:"%C(yellow)%h%C(blue)\\ [%cn]\\ %C(green)%ad%C(red)%d\\ %C(reset)%s" --decorate --date=relative
  ll = log --pretty=format:"%C(yellow)%h%C(blue)\\ [%cn]\\ %C(green)%ad%C(red)%d\\ %C(reset)%s" --decorate --numstat
  lll = log -u
  pl = pull --ff-only

  pamadd = !FILES=`git status -s | awk '{ print $2 }' | fzf -x -m` && git add --all ${FILES}

  pr = "!f() { hub pull-request; };f"

[push]
  default = tracking
[gitreview]
  raphapr = raphapr
[github]
  user = raphapr
[diff]
  renames = copies
[merge]
  stat = true
[pull]
  rebase = false
[commit]
	gpgsign = true

[includeIf "gitdir:~/repos/loadsmart/"]
  path = ~/repos/loadsmart/.gitconfig
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

# get go private packages (https://go.dev/doc/faq#git_https)
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
