# GTK theme
include "/usr/share/themes/Numix-ArchBlue/gtk-2.0/gtkrc"

# Font
style "myfont" {
    font_name = "Lucida Grande 9"
}
widget_class "*" style "myfont"
gtk-font-name = "Lucida Grande 9"

# Icon theme
gtk-icon-theme-name = "Numix"

# Toolbar style
#gtk-toolbar-style = GTK_TOOLBAR_ICONS

gtk-xft-antialias=1
gtk-xft-hinting=1
gtk-xft-hintstyle="hintslight"
gtk-xft-rgba="rgb"
