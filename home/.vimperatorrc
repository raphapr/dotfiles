set focuscontent

let mapleader = ","
nnoremap j 4j
nnoremap k 4k
nnoremap K gt
nnoremap J gT

ignorekeys add feedly.com
ignorekeys add mail.google.com

"set gui=none,tabs

"" tab move 
nnoremap mt :tabmove 

"" display download
nnoremap <leader>d :downloads<CR>

"" fullscreen
nnoremap <leader>f :set fullscreen!<CR>

" find as you type
set incsearch
" make searches case-insensitive
set ignorecase

" disable search highlight
map <silent> <F3> :noh<CR>

inoremap <C-a> <Ins><C-a><Ins>

" undo list
noremap U :undo<Space>

set defsearch=google

map <C-S-PageUp> :tabm -1<CR>
map <C-S-PageDown> :tabm +1<CR>

" Move the current tab to the left
noremap <leader>h <Esc>:tabmove! -1<CR>

" Move the current tab to the right
noremap <leader>l <Esc>:tabmove! +1<CR> " "
