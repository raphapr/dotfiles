nnoremap j 3j
nnoremap k 3k

nnoremap K gt
nnoremap J gT

let mapleader = ","

set gui=none,tabs

colorscheme indigo

"" tab move 
nnoremap mt :tabmove 

"" display download
nnoremap <leader>d :downloads<CR>

"" fullscreen
nnoremap <leader>f :set fullscreen!<CR>

set hintchars=hjklasdfgyuiopqwertnmzxcvb


" find as you type
set incsearch
" make searches case-insensitive
set ignorecase

" disable search highlight
map <silent> <F3> :noh<CR>

" Turn on delicious completions for :open and :tabopen
autocmd VimperatorEnter ".*" :set complete+=D  "

inoremap <C-a> <Ins><C-a><Ins>
