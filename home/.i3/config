bindsym $mod+Tab exec --no-startup-id rofi -show window -lines 3 -eh 2 -width 100 -padding 300 -opacity "85" -bw 0 -font "System San Francisco Display 18"

# There also is the (new) i3-dmenu-desktop which only displays applications
